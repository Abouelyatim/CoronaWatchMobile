<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.corona.ui.map.map"
        android:label="map"
        tools:layout="@layout/map_fragment"

    />

    <fragment
        android:id="@+id/galery"
        android:name="com.example.corona.ui.report.galery"
        android:label="gallery"

        />
    <fragment
        android:id="@+id/takenvideo"
        android:name="com.example.corona.ui.report.takenvideo"
        android:label="takenvideo"

        />

    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.corona.ui.post.post"
        android:label="post"
        tools:layout="@layout/post_fragment"

        />

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.corona.ui.report.report"
        android:label="report"
        tools:layout="@layout/report_fragment"

        >
        <action
            android:id="@+id/galleryAction"
            app:destination="@id/galery" />
        <action
            android:id="@+id/takenVideoAction"
            app:destination="@id/takenvideo" />
        <action
            android:id="@+id/takenImageAction"
            app:destination="@id/takenImage" />
    </fragment>


    <fragment
        android:id="@+id/takenImage"
        android:name="com.example.corona.ui.report.takenimage"
        android:label="image"
        tools:layout="@layout/takenimage_fragment"

        />
    <fragment
        android:id="@+id/videoFragment"
        android:name="com.example.corona.ui.video.video"
        android:label="video"
        tools:layout="@layout/video_fragment"

        />

    <fragment
        android:id="@+id/viewFragment"
        android:name="com.example.corona.ui.view.view"
        android:label="view"
        tools:layout="@layout/view_fragment"

        />





</navigation>