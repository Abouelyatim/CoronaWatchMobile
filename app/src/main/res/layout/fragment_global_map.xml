<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar_loading_global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading"
        android:layout_gravity="center"

        />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <LinearLayout
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_sheet_global"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/bottom_sheet_background"
        >


        <TextView
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_field"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="احصائيات حول المنطقة"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/dark"
            android:paddingBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/global_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="1-1-2020"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/dark"
                />

            <TextView
                android:id="@+id/region_global"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="البلد"
                android:layout_weight="0"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/global_NewConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="533578"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/danger_lvl3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="حالات مؤكدة جديدة"
                android:layout_weight="0"
                android:textColor="@color/dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/global_NewDeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="500"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/danger_lvl3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="وفيات جديدة"
                android:layout_weight="0"
                android:textColor="@color/dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/global_TotalConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="88888"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/danger_lvl2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="كل الحالات المؤكدة"
                android:layout_weight="0"
                android:textColor="@color/dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/lobal_TotalDeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="4825"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/danger_lvl2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="إجمالي الوفيات"
                android:layout_weight="0"
                android:textColor="@color/dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/global_NewRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="6072"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/danger_lvl1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" الحالات الجديدة التي شفيت"
                android:layout_weight="0"
                android:textColor="@color/dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/global_TotalRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="6072"
                android:layout_weight="0"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/danger_lvl1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="كل الحالات  التي شفيت"
                android:layout_weight="0"
                android:textColor="@color/dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>




    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>